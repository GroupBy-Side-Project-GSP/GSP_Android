<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="calendarDayModel"
            type="com.gsps.gsp_android.ui.main.CalendarDayModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBackground"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginVertical="7.25dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDate"
            setDate="@{calendarDayModel}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ivSelected"
            app:layout_constraintEnd_toEndOf="@id/ivSelected"
            app:layout_constraintStart_toStartOf="@id/ivSelected"
            app:layout_constraintTop_toTopOf="@id/ivSelected" />

        <ImageView
            android:id="@+id/ivPlan"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>