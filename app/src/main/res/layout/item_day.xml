<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="calendarDayModel"
            type="com.gsps.gsp_android.ui.main.CalendarDayModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBackground"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioButton
            android:id="@+id/rbDay"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginVertical="7.25dp"
            android:background="@drawable/item_calendar_day_background"
            android:button="@null"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="@drawable/item_calendar_day_textcolor"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPlan"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rbDay" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>